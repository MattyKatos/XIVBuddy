<nav style="width:100vw;min-width:100vw;background:#23272f;color:#fff;padding:0.6em 0.8em 0.6em 1.2em;display:flex;align-items:center;justify-content:space-between;box-sizing:border-box;">
  <a href="/dashboard" style="color:#fff;font-weight:bold;font-size:1.3em;text-decoration:none;letter-spacing:1px;">XIVBuddy</a>
  <div style="position:relative;">
    <div id="userDropdownBtn" style="cursor:pointer;font-size:1.05em;font-weight:500;user-select:none;">
      <%= user.username %> &#x25BC;
    </div>
    <div id="userDropdownMenu" style="display:none;position:absolute;right:0;top:2em;background:#fff;color:#23272f;min-width:120px;box-shadow:0 6px 16px rgba(0,0,0,0.12);border-radius:5px;z-index:1000;">
      <a href="/logout" class="action-btn" style="display:block;text-align:left;width:100%;background:none;color:#23272f;padding:0.7em 1em;border:none;text-decoration:none;">Logout</a>
    </div>
  </div>
</nav>
<script>
  const btn = document.getElementById('userDropdownBtn');
  const menu = document.getElementById('userDropdownMenu');
  btn.onclick = function(e) {
    e.stopPropagation();
    menu.style.display = menu.style.display === 'block' ? 'none' : 'block';
  };
  document.body.addEventListener('click', function() {
    menu.style.display = 'none';
  });
</script>
